source 'https://rubygems.org'

# web framework
gem 'sinatra'
gem 'sinatra-activerecord'

# database
gem 'sqlite3'

# utilities
gem 'bcrypt' # password hashing
gem 'dotenv' # load .env
gem 'erector' # view templates
gem 'httparty' # api requests
gem 'irb'
gem 'json'
gem 'rake' # database tasks

# web server
gem 'puma'

# development tools
group :development do
  gem 'pry-byebug'
  gem 'racksh'
  gem 'rubocop', require: false
  gem 'sinatra-reloader'
end
